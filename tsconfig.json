
{
    "include": ["src", "types"],
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/esm",
        "sourceMap": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "declaration": true,
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"],
        "resolveJsonModule": true
    }
}
